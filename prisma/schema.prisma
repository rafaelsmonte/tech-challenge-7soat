generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Costumers {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now()) @db.Timestamptz(3)
  updatedAt        DateTime @updatedAt @db.Timestamptz(3)
  name             String   @db.VarChar(256)
  taxpayerRegistry String   @map("taxpayerRegistry") @db.VarChar(256)
  email            String   @db.VarChar(256)
  Orders           Orders[]

  @@map("costumers")
}

model Categories {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now()) @db.Timestamptz(3)
  updatedAt DateTime     @updatedAt @db.Timestamptz(3)
  type      CategoryType @default(MEAL)
  Products  Products[]

  @@map("categories")
}

model Products {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now()) @db.Timestamptz(3)
  updatedAt   DateTime @updatedAt @db.Timestamptz(3)
  name        String   @db.VarChar(256)
  price       Decimal  @db.Decimal(10, 2)
  description String   @db.VarChar(256)
  pictures    String   @db.VarChar(256)
  categoryId  Int

  Categories    Categories      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  OrderProducts OrderProducts[]

  @@map("products")
}

model Orders {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime    @updatedAt @db.Timestamptz(3)
  costumerId Int?
  notes      String      @default("")
  trackingId Int
  status     OrderStatus @default(AWAITING)

  Costumers     Costumers?      @relation(fields: [costumerId], references: [id], onDelete: Cascade)
  OrderProducts OrderProducts[]

  @@map("orders")
}

model OrderProducts {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  Orders    Orders   @relation(fields: [orderId], references: [id])
  Products  Products @relation(fields: [productId], references: [id])

  @@map("orderProducts")
}

enum OrderStatus {
  AWAITING
  IN_PROGRESS
  DONE
  CANCELLED
}

enum CategoryType {
  MEAL
  SIDE
  DRINK
  DESSERT
}
